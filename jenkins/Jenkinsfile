pipeline {
    agent {
        docker {
            image 'docker.desaysv.com/ici2/tools/maven-edoc:20240112'
            args '-v /root/.m2:/root/.m2'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage("Clone code from github") {
            steps {
                script {
                    git  credentialsId: 'wangzhaokai', url: 'git@github.com:wangzhaokai11/simple-java-maven-app.git'
                }
            }
        }
        stage("Maven Build") {
            steps {
                script {
                    sh "mvn package -DskipTests=true"
                    // 将产物（Jar包）放入stash
                    stash includes: 'target/*.jar', name: 'myStash'
                }
            }
        }
        stage("Publish to Nexus Repository Manager") {
            steps {
                script {
                    echo '执行edoc上传'
                    // 在这里可以使用unstash将产物取出并使用
                    unstash 'myStash'
                    // 假设Jar包的名称是simple-java-maven-app.jar
                    def jarPath = sh(script: 'find ${WORKSPACE} -name "simple-java-maven-app.jar"', returnStdout: true).trim()
                    echo "Jar Path in Publish Stage: ${jarPath}"
                    // 在这里可以执行上传操作，使用${jarPath}作为路径
                }
            }
        }
    }
}
